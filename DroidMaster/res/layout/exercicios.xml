<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent" 
	android:orientation="vertical">
<ListView
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:id="@+id/list_view_exercicio"
  android:layout_weight="1">
    
</ListView>
<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" >
	<Spinner android:layout_height="wrap_content" android:id="@+id/sp_grupo_muscular" android:layout_width="wrap_content" android:prompt="@string/Spinner_musculo" android:layout_weight="1">
	</Spinner>
	<LinearLayout android:layout_height="fill_parent" android:layout_width="wrap_content" android:gravity="center">
		<Button  android:id="@+id/btn_add_exercicio" android:layout_height="fill_parent" android:layout_width="wrap_content" android:text="@string/btn_add_exercicio" android:textSize="12sp" android:gravity="center"/>
	</LinearLayout>	
</LinearLayout>
</LinearLayout>
