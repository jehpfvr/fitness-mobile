<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="panel_medidas">
		<item name="android:layout_width">80dp</item>
		<item name="android:layout_height">60dp</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_margin">5dp</item>
	</style>
	
	<style name="panel_medidas_top">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:gravity">center</item>
		<item name="android:background">@drawable/panel_top</item>
	</style>
	
	<style name="panel_medidas_textview">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">1dp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">10sp</item>
	</style>	
    
    <style name="panel_medidas_conteudo">
    <item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:orientation">vertical</item>
		<item name="android:gravity">center</item>
		<item name="android:background">@drawable/panel_content</item> 
    </style>
    	
    <style name="panel_medidas_edittext">
    	<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:inputType">numberDecimal</item>
		<item name="android:layout_margin">1dp</item>
		<item name="android:text">0.0</item>
		<item name="android:textSize">15sp</item>
    </style>
    
    <style name="panel_medidas_tablerow">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
	</style>
	
	<style name="panel_medidas_btn">
		<item name="android:layout_width">80dp</item>
		<item name="android:layout_height">60dp</item>
	</style>
	
</resources>
