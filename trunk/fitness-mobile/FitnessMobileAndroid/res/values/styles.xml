<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="white_background_wh">
		<item name="android:background">@drawable/background</item>
	</style>

	<style name="white_background_bl">
		<item name="android:background">@drawable/background_noite</item>
	</style>

	<style name="text_title_wh">
		<item name="android:textColor">#FFF</item>
		<item name="android:textSize">16sp</item>
		<item name="android:shadowDx">1.0</item>
		<item name="android:shadowDy">1.0</item>
		<item name="android:shadowRadius">3</item>
		<item name="android:shadowColor">#888</item>
	</style>

	<style name="text_title_bl">
		<item name="android:textColor">#000</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16sp</item>
		<item name="android:shadowDx">1.0</item>
		<item name="android:shadowDy">1.0</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:shadowColor">#DDD</item>
	</style>

	<style name="listview_wh" parent="@android:style/Widget.ListView">
	    <item name="android:textColor">#000</item>
	</style>
	
	<style name="listview_bl" parent="@android:style/Widget.ListView">
		<item name="android:cacheColorHint">#fff</item>
	</style>

	<style name="ButtonDia">
		<item name="android:textColor">#FFFFFFFF</item>
	    <item name="android:shadowColor">#FF000000</item>
		<item name="android:textSize">16dip</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">@drawable/ic_btn_verde</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
		<item name="android:height">40dp</item>
		<item name="android:width">130dp</item>
	</style>

	<style name="ButtonNoite">
		<item name="android:textColor">#FFFFFFFF</item>
		<item name="android:shadowColor">#FF000000</item>
		<item name="android:textSize">16dip</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">@drawable/ic_btn_noite</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
		<item name="android:height">40dp</item>
		<item name="android:width">130dp</item>
	</style>

	<style name="default_wrap_content">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="btn_main" parent="@style/default_wrap_content">
	</style>
	<style name="programaLabel" parent="@style/programaLabel"></style>
</resources>
