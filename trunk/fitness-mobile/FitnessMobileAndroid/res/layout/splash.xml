<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">




	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:stretchColumns="1" android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<TableRow android:layout_width="wrap_content"
			android:layout_weight="4" android:layout_height="0dp">
			<ImageView android:layout_gravity="center" android:src="@drawable/splash"
				android:layout_width="318dp" android:layout_height="482dp" />
		</TableRow>
		<TableRow android:layout_width="wrap_content"
			android:layout_weight="0.3" android:layout_height="0dp">
			<TextView android:text="@string/Carregando" android:id="@+id/progressText"></TextView>
			</TableRow>
		<TableRow android:layout_width="wrap_content"
			android:layout_weight="1" android:layout_height="0dp">
			<ProgressBar android:layout_width="wrap_content"
				android:id="@+id/progressBar" android:layout_height="wrap_content"
				style="@android:style/Widget.ProgressBar.Horizontal" />
		</TableRow>


	</TableLayout>
</LinearLayout>
