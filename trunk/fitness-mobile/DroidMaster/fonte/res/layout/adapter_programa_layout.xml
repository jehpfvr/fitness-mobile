<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  
  <LinearLayout android:layout_height="50dp" android:layout_width="wrap_content" android:orientation="horizontal" android:gravity="center">
  	<ImageView android:id="@+id/adapter_exercicio_imagem" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
  </LinearLayout>
  <Button android:id="@+id/serie_adp_edit" android:layout_height="wrap_content" android:layout_width="80dp" android:text="@string/Editar" android:visibility="gone"/>
  <Button android:id="@+id/serie_adp_del" android:layout_height="wrap_content" android:layout_width="80dp" android:text="@string/Excluir" android:visibility="gone"/>
  <LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="horizontal" android:gravity="center">
  	<TextView android:layout_height="wrap_content" android:id="@+id/adapter_exercicio_text" android:layout_width="wrap_content" android:text="TextView"/>
  </LinearLayout>
   
</LinearLayout>
