<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_white" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" >

        <TableLayout
            style="@style/default_wrap_content"
            android:layout_alignParentBottom="true" >

            <TableRow android:layout_marginBottom="20dip" >

                <Button
                    android:id="@+id/btn_main_programa"
                    style="@style/button"
                    android:text="@string/programa">
                </Button>

                <Button
                    android:id="@+id/btn_main_exercicio"
                    style="@style/button"
                    android:layout_marginLeft="8dp"
                    android:text="@string/exercicio" >
                </Button>
                
            </TableRow>

            <TableRow >

                <Button
                    android:id="@+id/btn_main_medidas"
                    style="@style/button"
                    android:text="@string/Medidas" >
                </Button>

                <Button
                    android:id="@+id/btn_main_estatistica"
                    style="@style/button"
                    android:layout_marginLeft="8dp"
                    android:text="Estatisticas" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>