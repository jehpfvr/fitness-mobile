<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  style="?whiteBackground">
  <TextView android:layout_height="wrap_content" android:id="@+id/exercicio_textview" android:text="Exercicios" android:layout_width="wrap_content" />
  <ListView android:layout_height="wrap_content" android:id="@+id/exercicio_listview" android:layout_width="fill_parent" android:layout_weight="1"/>
  <Button style="?button" android:layout_width="fill_parent" android:id="@+id/add_exercicio_salvar" android:layout_height="70dp" android:text="@string/Salvar" android:textSize="30sp"></Button>
</LinearLayout>
